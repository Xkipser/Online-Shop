<%- include('includes/head.ejs', { title: 'Add Product' }) %>
<link rel="stylesheet" href="/styles/admin-page.css">
<script src="/scripts/image-preview.js" defer></script>
</head>
<body>
    <%- include('includes/header.ejs') %>
    <main>
        <h1>New Product</h1>
        <form action="/admin/add-prod?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <div class="form-blueprint">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </div>

            <div class="form-blueprint" id="image-picked">
                <p>
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image">
                </p>
                <img src="" alt="Your picked image" accept=".jpg, .png" required>
            </div>

            <div class="form-blueprint">
                <label for="summary">Summary</label>
                <input type="text" name="summary" id="summary" required>
            </div>

            <div class="form-blueprint">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" min="0.01" step="0.01" required>
            </div>

            <div class="form-blueprint">
                <label for="discription">Discription</label>
                <textarea name="discription" id="discription" cols="30" rows="5" required></textarea>
            </div>

            <div id="div-btn">
                <a class="a-btn" href="/add-prod">Reset</a>
                <button class="btn">Add</button>
            </div>
        </form>
    </main>
</body>
</html>